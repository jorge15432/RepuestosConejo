<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6990F4"
    android:backgroundTint="#5279A1"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/tv_correo"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:visibility="visible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="198dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="236dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/tv_contra"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="284dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="322dp" />

        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="101dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="74dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="Repuestos "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conejo"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="97dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="231dp"
            tools:layout_editor_absoluteY="77dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/repuestos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="373dp">

            <ImageButton
                android:id="@+id/bt_registro"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:contentDescription="Registro"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_registro"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:id="@+id/bt_inicio_de_sesion"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#D3D1D1"
                android:contentDescription="Logueo"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_inicio_de_sesion"
                tools:ignore="ImageContrastCheck"
                tools:layout_editor_absoluteX="187dp"
                tools:layout_editor_absoluteY="373dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="434dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_loguearse"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="434dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_registro"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="434dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>